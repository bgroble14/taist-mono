{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "components/*": ["./src/components/*"],
      "services/*": ["./src/services/*"],
      "hooks/*": ["./src/hooks/*"],
      "reducers/*": ["./src/reducers/*"],
      "types/*": ["./src/types/*"],
      "utils/*": ["./src/utils/*"],
      "firebase": ["./src/firebase/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
