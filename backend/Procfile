web: until php artisan tinker --execute="DB::connection()->getPdo();" 2>/dev/null; do echo "Waiting for database..."; sleep 5; done && php artisan railway:fix-migrations && php artisan migrate --force && php artisan version:sync && php artisan serve --host=0.0.0.0 --port=$PORT
worker: until php artisan tinker --execute="DB::connection()->getPdo();" 2>/dev/null; do echo "Waiting for database..."; sleep 5; done && php artisan schedule:work
